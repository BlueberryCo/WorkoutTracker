<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
   >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tlMenuForClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/trMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bClientCalendar"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tvCalendarmenu"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/bClientProfile"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tvClientProfile"
                    android:textColor="#000000" />
            </TableRow>
            <TableRow
                android:id="@+id/trClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvClientNameProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#222222"
                    android:text="SUN"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</LinearLayout>