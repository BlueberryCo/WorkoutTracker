<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".ClientProfileActivity">


    <blueberryco.workouttracker.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDayWorkout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="#000000"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNoClientsForDay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvClientsCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlForAddWO"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/ivAddSymbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/wod_small" />

        <Button
            android:id="@+id/bAddWO"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivAddSymbol"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:text="txt" />

    </RelativeLayout>

</LinearLayout>